<div class="media">
  <a class="pull-left" href="#">
        <% if post.image? %>
          <%=  image_tag(post.image.image_thumb.url, class: 'media-object thumbnail') %>
        <% else %>
          <%= image_tag('fallback/default_image.jpg', class: 'media-object thumbnail', height: '55px', width: '80px') %>
        <% end %>
      </a>
  <div class="media-body">
    <h4 class="media-heading">
      <%= link_to (markdown post.title), [post.topic, post] %>
    </h4>
    <%= render partial: 'users/submitted_by', locals: { topic: post.topic, post: post } %>
    <%= render partial: 'votes/voter', locals: { topic: post.topic, post: post } %>
  </div>
</div>