
  <% post.comments.each do |comment| %>
    <div class="media">
      <a class="pull-left" href="#">
        <%= render_comment_avatar_for(comment.user) %>
      </a>
      <div class="media-body">
       <h4 class="media-heading">
          <%= comment.user.name %>
        </h4>
        <p> 
          <%= comment.body %>
        </p>
        <small>
          &raquo; submitted <%= time_ago_in_words(comment.created_at) %> ago by <em><%= comment.user.name %> </em>
        </small>
        <!--Delete Comment-->
        <% if policy(comment).destroy? %>
        <p>
          <%= link_to "Delete Comment", [topic, post, comment], method: :delete, class: 'btn btn-xs btn-danger', confirm: 'Are you sure you want to delete this post?' %>
        </p>
        <% end %>

      </div>
    </div>

  <% end %>
